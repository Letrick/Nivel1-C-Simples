#include<iostream>

int main () {
	
	int numero;
	
	std::cout << "Digite um numero e saberemos se e Positivo, negativo ou NULO: ";
	std::cin  >> numero;
	
	
	if(numero >=1){
	std::cout << "Positivo";
		
		
	}
	else if(numero < 0){
	std::cout << "negativo";
		
	}
	else{
		
		std::cout << "nulo";
		
	}
	
}
